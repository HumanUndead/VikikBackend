@model CMS.Product
<div class="wow fadeInUp" data-wow-delay="0s">

    <div class="product-item">

        <div class="product-image-actions">

            <a href="~/@Model.FullPath" class="product-image bkwhite"><img src="~/assets/images/blank.gif" data-echo="@Url.Content("~/content/products/")@(Model.ThumbURL.Replace("\\", "/").Replace(" ", "%20"))@(Model.FirstImagePost)_290x324.jpg" alt=""></a>

            @if (Model.OldPrice.HasValue)
            {
                <div class="product-label"><span>@Resources.Strings.Sale</span></div>
            }
            <div class="product-actions">
                <div class="btn-group-product-actions">
                    <a title="Add to Cart" href="~/lists/cart/add/@Model.ID?listid=@ViewBag.ListID" class="btn btn-action btn-block">@Resources.Strings.AddToCart</a>
                    
                    <a title="View" class="btn btn-action btn-block" href="~/item/@Model.ID/@CMS.Helpers.GeneralHelper.CleanForURL(Model.Name)">@Resources.Strings.View</a>
                </div>
            </div>

        </div><!-- /.product-image -->

        <div class="product-item-info text-left">
            <h3 class="product-title"><a href="~/item/@Model.ID/@CMS.Helpers.GeneralHelper.CleanForURL(Model.Name)">@Model.Name @(Model.Quantity>1?" x " + Model.Quantity:"")</a></h3>
            <span class="product-price price">
            @if (Model.OldPrice.HasValue)
            {
                <del><span class="amount">@String.Format(Resources.Strings.PriceFormat, Model.OldPrice.Value.ToString("#,##0"))</span></del>
            }
                <span class="amount">@String.Format(Resources.Strings.PriceFormat, Model.Price.Value.ToString("#,##0"))</span>
            </span><!-- /.product-price -->


        </div><!-- /.product-item-info -->
    </div><!-- /.product-item -->
</div>