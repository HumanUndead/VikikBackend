    <div class="page-width main-content">
        <div id="wrapper" class="clearfix container">
            <div class="row">
                <div id="content-wrapper" class="content-wrapper">
                    <section id="main">
                        <div class="cart-grid row">

                            <div class="cart-grid-body">

                                <div class="card cart-container">
                                    <div class="card-block hidden">
                                        <h1 class="h1">@Resources.Strings.ShoppingCart</h1>
                                    </div>
                                    <div class="cart-overview js-cart">
                                        <div id="block-history" class="block-center v-web">
                                            <table class="table-wishlist table table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th class="col-xs-1 col-md-1">@Resources.Strings.Image</th>
                                                        <th class="col-xs-2 col-md-2">@Resources.Strings.Item</th>
                                                        <th class="col-xs-1 col-md-1">@Resources.Strings.UnitPrice</th>
                                                        <th class="col-xs-1 col-md-1">@Resources.Strings.Size</th>
                                                        <th class="col-xs-1 col-md-1">@Resources.Strings.Color</th>
                                                        <th class="col-xs-1 col-md-1">@Resources.Strings.Quantity</th>
                                                        <th class="col-xs-1 col-md-1">@Resources.Strings.Total</th>
                                                        <th class="col-xs-2 col-md-2">@Resources.Strings.Delete</th>
                                                    </tr>
                                                </thead>
                                                <tbody>

                                                    @foreach (var item in Model.Items)
                                                    {
                                                    <tr id="wishlist_48">
                                                        <td class="col-xs-2 col-md-2">

                                                            @*<img src="~/@(item.FullImagePath)_353x459.jpg" width="80" />*@
                                                            <img src="../@(item.FullImagePath)_300x360.jpg" width="80" />
                                                        </td>
                                                        <td class="col-xs-1 col-md-1">
                                                            <a href="~/Catalog/Product/@item.ID/@CMS.Helpers.GeneralHelper.CleanForURL(item.Name)">
                                                                @item.Name
                                                            </a>
                                                        </td>
                                                        <td class="col-xs-1 col-md-1"> @item.FormattedUnitPrice</td>
                                                        @if (!String.IsNullOrEmpty(item.Item.Size.Label))
                                                        {
                                                            <td class="col-xs-1 col-md-1"> @item.Item.Size.Label</td>
                                                        }
                                                        else
                                                        {
                                                            <td class="col-xs-1 col-md-1"><span style="text-decoration:line-through">@Resources.Strings.Size</span></td>
                                                        }
                                                        @if (!String.IsNullOrEmpty(item.Item.Color.Label))
                                                        {
                                                            <td class="col-xs-1 col-md-1"> @item.Item.Color.Label</td>
                                                        }
                                                        else
                                                        {
                                                            <td class="col-xs-1 col-md-1"><span style="text-decoration:line-through">@Resources.Strings.Color</span></td>
                                                        }
                                                        <td class="col-xs-1 col-md-1"> @item.Quantity</td>
                                                        <td class="col-xs-1 col-md-1"> @item.FormattedTotalPrice</td>
                                                        <td class="col-xs-2 col-md-2">
                                                            <a class="remove-from-cart" rel="nofollow" href="/cart/remove/@item.ID">
                                                                <svg class="svgic svgic-down">
                                                                    <use xlink:href="#si-cross"></use>
                                                                </svg>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                    }



                                                </tbody>
                                            </table>
                                        </div>

                                        <div id="block-history" class="block-center v-mobile">
                                            <table class="table-wishlist table table-bordered v-mobile p-t-20" >
                                                <thead>
                                                    <tr>
                                                        <th class="" style="width:20%">@Resources.Strings.Image</th>
                                                        <th class="" style="width:60%">@Resources.Strings.Item</th>
                                                        <th class="" style="width:10%">@Resources.Strings.Total</th>
                                                        <th class="" style="width:10%">@Resources.Strings.Delete</th>
                                                    </tr>
                                                </thead>
                                                <tbody>

                                                    @foreach (var item in Model.Items)
                                                    {
                                                        <tr id="wishlist_48">
                                                            <td class="" style="width:20%">

                                                                @*<img src="~/@(item.FullImagePath)_353x459.jpg" width="80" />*@
                                                                <img src="~/@(item.FullImagePath)_300x360.jpg" width="80" />
                                                            </td>
                                                            <td class="" style="width:60%">
                                                                <a href="~/Catalog/Product/@item.ID/@CMS.Helpers.GeneralHelper.CleanForURL(item.Name)">
                                                                    @item.Name &nbsp; x(@item.Quantity)
                                                                    <br />
                                                                    @item.Item.Size.Label &nbsp; @item.Item.Color.Label
                                                                </a>
                                                            </td>
                                                            <td class="" style="width:10%"> @item.FormattedTotalPrice</td>
                                                            <td class="" style="width:10%">
                                                                <a class="remove-from-cart" rel="nofollow" href="/cart/remove/@item.ID">
                                                                    <svg class="svgic svgic-down">
                                                                        <use xlink:href="#si-cross"></use>
                                                                    </svg>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }



                                                </tbody>
                                            </table>
                                        </div>


                                    </div>
                                </div>
                                <a class="label hidden" href="">
                                    <svg class="svgic">
                                        <use xlink:href="#si-arrowleft"></use>
                                    </svg>
                                </a>

                            </div>


                        </div>
                    </section>
                </div>
            </div>
