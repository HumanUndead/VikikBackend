@using CMS;

@{
    List<Product> wishlistItems = ViewBag.WishlistProducts == null ? new List<Product>() : ViewBag.WishlistProducts;
}

@section styles{
    <meta property="og:title" content="@Resources.Strings.project_name | @Resources.Strings.Wishlist">
    <meta property="og:description" content="@Resources.Strings.Description_Page">
    <meta property="og:image" content="../wsimages/Vikik.jpg">
    <meta property="og:url" content="../user/wishlist">
    <meta property="twitter:title" content="@Resources.Strings.project_name | @Resources.Strings.Wishlist">
    <meta property="twitter:description" content="@Resources.Strings.Description_Page">
    <meta property="twitter:image" content="../wsimages/Vikik.jpg">

    <style>
        .v-web .table-wishlist thead tr th, .table-wishlist tbody tr td {
         width: 20% !important;
        }
        .table-wishlist thead tr th, .table-wishlist tbody tr td {
            text-align: center;
            vertical-align: baseline;
            /*display: flex;*/
            justify-content: center;
            align-items: center;
               vertical-align: middle;
        }

        .table-wishlist tbody tr td {
            height: 120px;
               vertical-align: middle;
        }
    </style>
}
<section class="main-contant-wrapper clearfix dir-rtl " data-location="/templates/layouts/layout-both-columns.tpl" style="height: 87vh !important;">
    <div class="page-width top-content">
        <aside id="notifications">
            <div class="page-width">
            </div>
        </aside>
        <nav data-depth="4" class="breadcrumb page-width container hidden-md-down">
            <div class="row h-100">
                <div class="col-xs-12">
                    <ol class="p-a-0">
                        <li>
                            <a itemprop="item" href="~/index">
                                <span itemprop="name">@Resources.Strings.Home</span>
                            </a>
                            <meta itemprop="position" content="1">
                        </li>
                        <li>
                            <a itemprop="item" href="">
                                <span itemprop="name">@Resources.Strings.Wishlist</span>
                            </a>
                            <meta itemprop="position" content="1">
                        </li>
                    </ol>
                </div>
            </div>
        </nav>
    </div>
    <div class="hook-content_top hook-container wide"></div>
    <div class="page-width main-content">
        <div id="wrapper" class="clearfix container">
            <div class="row">
                <div id="content-wrapper" class="content-wrapper">
                    <section id="main">
                        <section id="content" class="page-content card card-block">
                            <div id="mywishlist" class="mywishlist_17">
                                <div id="block-history" class="block-center v-web">
                                    @if (wishlistItems.Count > 0)
                                    {
                                        <table class="table-wishlist table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th class="col-xs-1 col-md-1">@Resources.Strings.Image</th>
                                                    <th class="col-xs-2 col-md-2">@Resources.Strings.ProductName</th>
                                                    <th class="col-xs-1 col-md-1">@Resources.Strings.Price</th>
                                                    <th class="col-xs-1 col-md-1">@Resources.Strings.Status</th>
                                                    <th class="col-xs-2 col-md-2">@Resources.Strings.Delete</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                @foreach (var item in wishlistItems)
                                                {
                                                    <tr id="wishlist_48">
                                                        <td class="col-xs-2 col-md-2">

                                                            <img src="~/@(item.FullImagePath)_300x360.jpg" width="80" />
                                                        </td>
                                                        <td class="col-xs-1 col-md-1">
                                                            <a href="~/Catalog/Product/@item.ID/@CMS.Helpers.GeneralHelper.CleanForURL(item.Name)">
                                                                @item.Name
                                                            </a>
                                                        </td>
                                                        <td class="col-xs-1 col-md-1"> @item.FormattedPrice</td>
                                                        <td class="col-xs-2 col-md-2">@(item.Quantity > 0 ? Resources.Strings.itemsInStock : Resources.Strings.ItemOutOfStock)</td>
                                                        <td class="col-xs-2 col-md-2">
                                                            <a href="~/user/wishlist/add/@item.ID">
                                                                x
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }



                                            </tbody>
                                        </table>
                                    }
                                    else
                                    {
                                        <div class="row product-content">
                                            <div class="flex-column m-b-30">
                                                <center style="width:100%">
                                                    <h1>
                                                        @Resources.Strings.Opps!
                                                    </h1>
                                                    <h3>
                                                        @Resources.Strings.EmptyWishlistMessage
                                                    </h3>
                                                </center>


                                            </div>
                                            <center style="width:100%">
                                                <a title="@Resources.Strings.StartShopping" href="~/" class=" custom-btn-4 btn-action btn-block" style="width:250px">@Resources.Strings.StartShopping</a>
                                            </center>
                                        </div>
                                    }
                                </div>


                                <div  class="block-center v-mobile">
                                    @if (wishlistItems.Count > 0)
                                    {
                                        <table class="table-wishlist table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th style="width:20%">@Resources.Strings.Image</th>
                                                    <th style="width:50%">@Resources.Strings.ProductName</th>
                                                    <th style="width:15%">@Resources.Strings.Price</th>
                                                    <th style="width:15%">@Resources.Strings.Delete</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                @foreach (var item in wishlistItems)
                                                {
                                                    <tr id="wishlist_48">
                                                        <td style="width:20%">

                                                            <img src="~/@(item.FullImagePath)_300x360.jpg" width="80" />
                                                        </td>
                                                        <td style="width:50%">
                                                            <a href="~/Catalog/Product/@item.ID/@CMS.Helpers.GeneralHelper.CleanForURL(item.Name)">
                                                                @item.Name
                                                            </a>
                                                        </td>
                                                        <td style="width:15%"> @item.FormattedPrice</td>
                                                        <td style="width:15%">
                                                            <a href="~/user/wishlist/add/@item.ID">
                                                                <svg class="svgic svgic-down">
                                                                    <use xlink:href="#si-cross"></use>
                                                                </svg>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }



                                            </tbody>
                                        </table>
                                    }
                                    else
                                    {
                                        <div class="row product-content">
                                            <div class="flex-column m-b-30">
                                                <center style="width:100%">
                                                    <h1>
                                                        @Resources.Strings.Opps!
                                                    </h1>
                                                    <h3>
                                                        @Resources.Strings.EmptyWishlistMessage
                                                    </h3>
                                                </center>


                                            </div>
                                            <center style="width:100%">
                                                <a title="@Resources.Strings.StartShopping" href="~/" class=" custom-btn-4 btn-action btn-block" style="width:250px">@Resources.Strings.StartShopping</a>
                                            </center>
                                        </div>
                                    }
                                </div>

                                <div id="block-order-detail">&nbsp;</div>

                            </div>
                        </section>
                        <footer class="page-footer"></footer>
                    </section>
                </div>
            </div>
        </div>
    </div>
    <div class="hook-content_bottom hook-container wide"></div>
</section>
@section scripts{
    <script>
        $(document).ready(function () {
            $("body").attr("id", "module-pk_wishlist-mywishlist");
        });
        $("body").removeClass("lang-en country-us currency-usd layout-full-width page-index tax-display-enabled pm-details-layout1 pm-filter-image header-static cp-only-filter product-grid-4 hide-header-icons gs-lazy-load").addClass("lang-en country-us currency-usd layout-full-width page- tax-display-enabled pm-details-layout1 pm-filter-image header-static cp-only-filter product-grid-4 hide-header-icons gs-lazy-load");
    </script>
}