                                                <div class="form-group row">
                                                    <div class="col-md-12">
                                                        <div class="relative">
                                                            <div class="relative">
                                                                <div class="icon-true">
                                                                    <input class="form-control" name="address2" id="address2" type="text" value="" placeholder="@Resources.Strings.BuildingNo" required>

