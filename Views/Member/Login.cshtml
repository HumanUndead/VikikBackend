@using CMS;
@section styles{
    <meta property="og:title" content="@Resources.Strings.project_name | @Resources.Strings.Login">
    <meta property="og:description" content="@Resources.Strings.Description_Page">
    <meta property="og:image" content="../wsimages/Vikik.jpg">
    <meta property="og:url" content="../member/Login">
    <meta property="twitter:title" content="@Resources.Strings.project_name | @Resources.Strings.Login">
    <meta property="twitter:description" content="@Resources.Strings.Description_Page">
    <meta property="twitter:image" content="../wsimages/Vikik.jpg">
}
<section class="main-contant-wrapper clearfix dir-rtl height87VH" data-location="/templates/layouts/layout-both-columns.tpl" @*style="height: 87vh !important;"*@>
    <div class="page-width top-content">
        <aside id="notifications">
            <div class="page-width">
            </div>
        </aside>
        <nav data-depth="1" class="breadcrumb page-width container hidden-md-down">
            <div class="row h-100">
                <div class="col-xs-12">
                    <ol class="p-a-0">
                        <li>
                            <a itemprop="item" href="~/index">
                                <span itemprop="name">@Resources.Strings.Home</span>
                            </a>
                            <meta itemprop="position" content="1">
                        </li>
                        <li>
                            <a itemprop="item" href="#">
                                <span itemprop="name">@Resources.Strings.Login</span>
                            </a>
                            <meta itemprop="position" content="2">
                        </li>
                    </ol>
                </div>
            </div>
        </nav>
    </div>
    <div class="hook-content_top hook-container wide"></div>
    <div class="page-width main-content">
        <div id="wrapper" class="clearfix container">
            <div class="row">
                <div id="content-wrapper" class="content-wrapper">
                    <section id="main">
                        <section id="content" class="page-content card card-block">
                            <div class="authentication-page">
                                <div class="register-section col-xs-12 col-sm-6">
                                    <h2>@Html.Raw(ViewBag.NewCustomers.Label)</h2>
                                    <div class="section-content">
                                        <p>
                                            @Html.Raw(ViewBag.NewCustomers.Text)
                                        </p>
                                        <a class="btn btn-primary" href="/register">
                                            @Resources.Strings.CreateAnAccount
                                        </a>
                                        @*<a class="btn btn-primary" href="/register" onclick="document.getElementById('form-account-login').submit()">
                                                @Resources.Strings.CreateAnAccount
                                            </a>*@
                                    </div>
                                </div>
                                <div class="login-section col-xs-12 col-sm-6">
                                    <h2>@Resources.Strings.Login</h2>
                                    @if (!String.IsNullOrEmpty(ViewBag.ErrorMessage))
                                    {
                                        @*<h4 id="ErrorMsg" style="color:red"> @ViewBag.ErrorMessage</h4>*@
                                        <div id="ErrorMsg" class="notifyjs-bootstrap-base notifyjs-bootstrap-error">
                                            <span data-notify-text="">@ViewBag.ErrorMessage!</span>
                                        </div>
                                    }
                                    <section class="login-form">
                                        <form id="form-account-login" action="@Url.Action("LoginUser","Member")" method="post">
                                            @*<input type="hidden" name="rt" value="@(string.IsNullOrEmpty( ViewBag.ReturnTo) ? Request["rt"] : ViewBag.ReturnTo)" />*@
                                            <input type="hidden" value="1" name="radAccount" />
                                            <section>
                                                <div class="form-group row">
                                                    <div class="col-md-8">
                                                        <div class="relative">
                                                            <div class="relative">
                                                                <div class="icon-true">
                                                                    <input class="form-control" name="txtEmail" id="RegistrationForm_email" type="email" value="" placeholder="@Resources.Strings.EmailAddress" required>
                                                                    <span class="focus-border"><i></i></span>
                                                                    <svg class="svgic input-icon">
                                                                        <use xlink:href="#si-email"></use>
                                                                    </svg>
                                                                </div>
                                                            </div>
                                                            <div class="form-control-comment">
                                                                <div class="form-group row">
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <div class="col-md-8">
                                                        <div class="relative">
                                                            <div class="input-group-dis js-parent-focus">
                                                                <div class="icon-true relative">
                                                                    <input class="form-control js-child-focus js-visible-password" name="txtPassword" id="password" type="password" placeholder="@Resources.Strings.Password" value="" pattern=".{5,}" required>
                                                                    <span class="focus-border"><i></i></span>
                                                                    <svg class="svgic input-icon">
                                                                        <use xlink:href="#si-password"></use>
                                                                    </svg>
                                                                </div>
                                                            </div>
                                                            <div class="form-control-comment">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="forgot-password flex-container">
                                                    <input id="ytremember" type="hidden" value="0" name="LoginForm[remember]" />
                                                    <input checked="checked" id="remember" name="LoginForm[remember]" value="1" type="checkbox" />
                                                    <label id="remember-label" for="remember">@Resources.Strings.KeepMeLoggedIn</label>

                                                    <a href="~/member/ForgotPassword" rel="nofollow" style="flex-grow:1">
                                                        @Resources.Strings.ForgotYourPassword?
                                                    </a>


                                                </div>
                                                <div class="m-t-20">
                                                    <a class="btn btn-primary" onclick="document.getElementById('form-account-login').submit()" title="Login" name="send" value="Login" id="LoginForm_submit" data-link-action="display-register-form">
                                                        @Resources.Strings.Login
                                                    </a>
                                                </div>
                                            </section>
                                        </form>
                                    </section>
                                </div>
                            </div>
                        </section>
                        <footer class="page-footer"></footer>
                    </section>
                </div>
            </div>
        </div>
    </div>
    <div class="hook-content_bottom hook-container wide"></div>
</section>




@section scripts{
    <script>
        $(document).ready(function () {
            $("body").attr("id", "authentication");
        });
        $("body").removeClass("lang-en country-us currency-usd layout-full-width page-index tax-display-enabled pm-details-layout1 pm-filter-image header-static cp-only-filter product-grid-4 hide-header-icons gs-lazy-load").addClass("lang-en country-us currency-usd layout-full-width page-authentication tax-display-enabled page-customer-account pm-details-layout1 pm-filter-image header-static cp-only-filter product-grid-4 hide-header-icons gs-lazy-load");
    </script>
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {

        <text>

            <script>
                setTimeout(function () {
                    $("#ErrorMsg").css("display", "none");
                }, 6000)
            </script>

            <script>

           //$("#cbox").notify("@ViewBag.ErrorMessage", "error", [{ autoHide: true, autoHideDelay: 2000, hideDuration: 200 }]);
            </script>
        </text>
    }
}



