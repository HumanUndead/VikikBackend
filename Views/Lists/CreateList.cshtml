<div class="site-content">
    <div class="breadcrumb-wrapper">
        <div class="container">
            <ul class="breadcrumb">
                <li><a href="~/Index">@Resources.Strings.Home</a></li>
                <li class="active">@Resources.Strings.CreateList</li>
            </ul>
        </div>
    </div><!-- /.breadcrumb-wrapper -->

    <div id="primary" class="content-area">
        <main class="light-bg site-main inner wow fadeInUp">
            <div class="container inner-bottom">
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-warning alert-dismissable alert-red">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true"><i class="fa fa-times-circle"></i></button>
                        @ViewBag.ErrorMessage
                    </div>
                }
                <h2>@Resources.Strings.CreateList</h2>
                <form class="form-register" role="form" action="~/lists/create" method="post" id="registerform" enctype="multipart/form-data">
                    <div class="row">
                        <div class="form-group col-xs-12 col-sm-6 inner-right">
                            <label for="name">@Resources.Strings.Type</label>
                            <select name="type" class="form-control" required>
                                <option value="1">@Resources.Strings.WeddingList</option>
                                <option value="2">@Resources.Strings.BabyList</option>
                            </select>
                        </div>
                        <div class="form-group col-xs-12 col-sm-6 inner-right">
                            <label for="password">@Resources.Strings.Name</label>
                            <input id="name" name="name" type="text" class="form-control" required>
                        </div>
                    </div><!-- /.row -->
                    <div class="row">
                        <div class="form-group col-xs-12 col-sm-6 inner-right">
                            <label for="password">@Resources.Strings.Location</label>
                            <input id="location" name="location" type="text" class="form-control" required>
                        </div>
                        <div class="form-group col-xs-12 col-sm-6 inner-right">
                            <label for="email">@Resources.Strings.Date</label>
                            <input type="date" name="eventdate" class="form-control" required>
                        </div>
                    </div><!-- /.row -->
                    <div class="row field-row">
                        
                        <div class="form-group col-xs-12 col-sm-6 inner-right">
                            <label for="confirm-password">@Resources.Strings.Password</label>
                            <input name="password" id="password" type="password" class="form-control" >
                        </div>
                        <div class="form-group col-xs-12 col-sm-6 inner-right">
                            <label for="confirm-password">@Resources.Strings.confirmpass</label>
                            <input name="confpassword" equalto="#password" type="password" class="form-control" >
                        </div>
                    </div><!-- /.row -->
                    <div class="row field-row">

                        <div class="form-group col-xs-12 col-sm-12">
                            <label for="confirm-password">@Resources.Strings.Description</label>
                            <textarea name="description" class="form-control"></textarea>
                        </div>
                        </div>
                    <div class="row field-row">

                        <div class="form-group col-xs-12 col-sm-12">
                            <label for="confirm-password">@Resources.Strings.Introduction</label>
                            <textarea name="extrainfo1" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row field-row">

                        <div class="form-group col-xs-12 col-sm-12">
                            <label for="confirm-password">@Resources.Strings.Outro</label>
                            <textarea name="extrainfo2" class="form-control"></textarea>
                        </div>
                    </div>
                        <div class="form-actions">
                            <button class="btn btn-lg col-xs-12 col-sm-4 btn-primary" name="message" type="submit">@Resources.Strings.CreateList</button>
                        </div><!-- /.row -->
                        <input type="hidden" name="rt" value="@ViewBag.ReturnTo" />
</form><!-- /.form-register -->
            </div><!-- /.light-bg -->
        </main><!-- /.site-main -->
    </div><!-- /.content-area -->
</div>
@section scripts
{
    <script src="~/assets/js/jquery-validation-1.13.1/jquery.validate.min.js"></script>
}
