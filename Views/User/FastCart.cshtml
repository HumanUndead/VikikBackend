@using CMS
@model List<CMS.FastCart>
@{

}

<div class="cart container minh-52vh">
   
        <div class="row   m-t-30 m-b-30">
            <div class="large-8 small-12">
                <h1 class="m-0">@Resources.Strings.Cart</h1>
            </div>
            <div class="large-4 small-12 text-center">
                <a href="~/user/AddFastCart" class="custom-btn-5 f-white">@Resources.Strings.AddNew</a>
            </div>
        </div>
    <div class="row">
        <table class="responsive table-cart large-12 small-12">
            <tr>
                <th width="25%">
                    @Resources.Strings.Cart #
                </th>
                <th width="25%">
                    @Resources.Strings.Date
                </th>
                <th>
                    @Resources.Strings.ItemsCount
                </th>
                <th width="25%"></th>
            </tr>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @item.ID
                    </td>
                    <td>
                        @item.DateAdded
                    </td>
                    <td>
                        @item.ItemsCount
                    </td>
                    <td>
                        <a href="~/AddFastCart?@item.ID"><i class="fa fa-pencel-o"></i></a>
                    </td>
                </tr>
            }
        </table>
    </div>

</div>

@section scripts{
  
}




